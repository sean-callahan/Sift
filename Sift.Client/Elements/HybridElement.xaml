<UserControl x:Class="Sift.Client.Elements.HybridElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sift.Client.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400" Background="#FF515151" Margin="5,0,5,5">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label Name="Number" Grid.Column="0" Foreground="#7A7A7A" Background="#424242" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14"/>
        <Label Name="Status" Grid.Column="1" Foreground="#7A7A7A" />
        <Button Name="HangupButton" Grid.Column="2" Height="25" Margin="5" Content="Hangup" />
    </Grid>
</UserControl>
